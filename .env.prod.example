# ServicesPro - Configuration Production pour Coolify
# Copiez ce fichier et configurez les variables dans Coolify

# === APPLICATION ===
APP_NAME=ServicesPro
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://votre-domaine.com

APP_LOCALE=fr
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=fr_FR

APP_MAINTENANCE_DRIVER=file
APP_MAINTENANCE_STORE=redis

# === SÉCURITÉ ===
BCRYPT_ROUNDS=12

# === LOGS ===
LOG_CHANNEL=stack
LOG_STACK=single,bugsnag
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# === BASE DE DONNÉES ===
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=servicespro
DB_USERNAME=servicespro
DB_PASSWORD=mot_de_passe_sécurisé

# === CACHE & SESSIONS ===
CACHE_STORE=redis
CACHE_PREFIX=servicespro_cache

SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=.votre-domaine.com

# === REDIS ===
REDIS_CLIENT=phpredis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# === QUEUE ===
QUEUE_CONNECTION=redis
QUEUE_FAILED_DRIVER=database

# === BROADCASTING ===
BROADCAST_CONNECTION=redis
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=eu

# === FILESYSTEM ===
FILESYSTEM_DISK=local
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=eu-west-3
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# === EMAIL ===
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="hello@servicespro.com"
MAIL_FROM_NAME="ServicesPro"

# === PAIEMENTS STRIPE ===
STRIPE_KEY=pk_live_xxxxx
STRIPE_SECRET=sk_live_xxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxx
CASHIER_CURRENCY=eur
CASHIER_CURRENCY_LOCALE=fr_FR

# === SERVICES EXTERNES ===
# Google Maps
GOOGLE_MAPS_API_KEY=

# SMS (Twilio)
TWILIO_SID=
TWILIO_TOKEN=
TWILIO_FROM=

# Analytics
GOOGLE_ANALYTICS_ID=

# === DÉPLOIEMENT ===
# Pour le premier déploiement uniquement
INITIAL_DEPLOY=true

# === SÉCURITÉ AVANCÉE ===
TRUSTED_PROXIES=*
SANCTUM_STATEFUL_DOMAINS=votre-domaine.com
SESSION_SECURE_COOKIE=true